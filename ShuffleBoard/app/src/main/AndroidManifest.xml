<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.calvin.cs262.shuffleboard" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/myAppTheme" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateStaticEvent"
            android:label="@string/title_activity_create_static_event" />
        <activity
            android:name=".CreateDynamicEvent"
            android:label="@string/title_activity_create_dynamic_event" />
        <activity
            android:name=".DynamicEventView"
            android:label="@string/title_activity_dynamic_event_view" />
        <activity
            android:name=".StaticEventView"
            android:label="@string/title_activity_static_event_view" >
        </activity>
    </application>

</manifest>
