<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New Dynamic Event"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/name"
        android:hint="Name of Event"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/timesPerWeek"
        android:hint="Times Per Week"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/duration"
        android:hint="Duration"
        android:layout_alignTop="@+id/timesPerWeek"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/timesPerWeek"
        android:layout_marginTop="20dp"
        android:stretchColumns="0,1"
        android:id="@+id/dayTable">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:id="@+id/SundayCheckBox"
                android:checked="true"
                android:layout_marginLeft="20dp" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:id="@+id/ThursdayCheckBox"
                android:checked="true"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:id="@+id/MondayCheckBox"
                android:checked="true"
                android:layout_marginLeft="20dp" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:id="@+id/FridayCheckBox"
                android:checked="true"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:id="@+id/TuesdayCheckBox"
                android:checked="true"
                android:layout_marginLeft="20dp" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:id="@+id/SaturdayCheckBox"
                android:checked="true"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:id="@+id/WednesdayCheckBox"
                android:checked="true"
                android:layout_marginLeft="20dp" />

        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/create"
        android:gravity="center_horizontal"
        android:layout_below="@+id/dayTable"
        android:layout_centerHorizontal="true" />

    <include layout="@layout/toolbar"
        android:id="@+id/include" />

</RelativeLayout>
