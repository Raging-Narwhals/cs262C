<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:focusableInTouchMode="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        Dynamic Events        "
        android:id="@+id/goToDynamicEventsButton"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
        android:layout_alignTop="@+id/goToStaticEventsButton"
        android:layout_alignParentEnd="true"
        android:layout_column="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Static Events"
        android:id="@+id/goToStaticEventsButton"
        android:longClickable="false"
        android:enabled="true"
        android:elegantTextHeight="false"
        android:clickable="true"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
        android:layout_below="@+id/include"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@id/goToDynamicEventsButton"
        android:layout_toStartOf="@+id/goToDynamicEventsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Dynamic Event"
        android:id="@+id/createDynamicEventButton"
        android:layout_below="@+id/goToStaticEventsButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/goToDynamicEventsButton" />

    <include
        layout="@layout/toolbar"
        android:id="@+id/include"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>