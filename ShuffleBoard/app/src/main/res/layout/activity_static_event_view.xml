<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Static Events"
        android:id="@+id/goToStaticEventsButton"
        android:longClickable="false"
        android:enabled="true"
        android:elegantTextHeight="false"
        android:clickable="true"
        android:layout_below="@+id/include"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignStart="@id/goToDynamicEventsButton"
        android:layout_alignLeft="@id/goToDynamicEventsButton"
        android:layout_toStartOf="@+id/goToDynamicEventsButton"
        android:layout_toLeftOf="@+id/goToDynamicEventsButton"
        android:background="#c6000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        Dynamic Events        "
        android:id="@+id/goToDynamicEventsButton"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
        android:layout_alignTop="@+id/goToStaticEventsButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_column="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Static Event"
        android:id="@+id/createStaticEventButton"
        android:layout_below="@+id/goToStaticEventsButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/goToDynamicEventsButton"
        android:layout_alignRight="@+id/goToDynamicEventsButton" />

    <include
        layout="@layout/toolbar"
        android:id="@+id/include"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_row="2"
        android:layout_column="0" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/createStaticEventButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:divider="#124b68"
        android:dividerHeight="1dp"
        android:smoothScrollbar="true"
        android:drawSelectorOnTop="false"
        android:contextClickable="false" />

</RelativeLayout>